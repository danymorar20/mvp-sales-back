{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@/src/*": ["src/*"],
      "@/database/*": ["src/features/database/*"],
      "@/user/*": ["src/features/user/*"],
      "@/id-generator-service/*": ["src/services/id-generator/*"],
      "@/hash-service/*": ["src/services/hash-service/*"],
      "@/tests/*": ["tests/*"]
    },
    "target": "esnext"
  },
  "module": {
    "type": "es6",
    "resolveFully": true
  },
  "minify": false
}
